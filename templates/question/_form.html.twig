{{ form_start(form, { 'attr':
    {'class':'w-1/2 p-5 border-2 rounded-2xl'},
}) }}
<div class="flex flex-col my-4">
    {{ form_label(form.title) }}
    {{ form_widget(form.title, { 'attr':
        {'class':'border-2 border-gray-200 rounded-lg'},
    }) }}
</div>
<div class="flex w-full justify-between">
    <div class="flex flex-col w-1/2 pr-4">
        {{ form_label(form.category) }}
        {{ form_widget(form.category, { 'attr':
            {'class':'border-2 border-gray-200 pr-2 rounded-lg'},
        }) }}
    </div>
    <div class="flex flex-col w-1/2 pl-4">
        {{ form_label(form.imageFile) }}
        {{ form_widget(form.imageFile, { 'attr':
            {'class':'border-2 border-gray-200 rounded-lg'},
        }) }}
    </div>

</div>
<button type="submit">Ajouter une nouvelle question</button>
{{ form_end(form) }}
