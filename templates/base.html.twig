<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{{ project_name }}{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap" rel="stylesheet">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
    {% set route = app.request.get('_route') %}
        <nav class="bg-[#AD0569] h-28 dark:bg-gray-900">
            <div class="flex flex-wrap items-center justify-between mx-auto h-full p-4">
                <a href="{{ path('app_homepage') }}" class="flex mx-2.5 w-1/6 items-center justify-center space-x-3 rtl:space-x-reverse">
                    <span class="self-center text-3xl text-white font-semibold whitespace-nowrap dark:text-white"><strong>Livequestion</strong></span>
                </a>
                <div class="flex items-center md:order-2 space-x-3 md:space-x-0 rtl:space-x-reverse">
                    {% if app.user is defined and app.user is not null %}
                    <button type="button" class="flex text-sm rounded-full items-center md:me-0 hover:ring-2 focus:ring-2 ring-fuchsia-700 dark:focus:ring-gray-600" id="user-menu-button" aria-expanded="false" data-dropdown-toggle="user-dropdown" data-dropdown-placement="bottom">
                        <span class="sr-only">Open user menu</span>
                        <img class="flex items-center w-14 h-14 rounded-full bg-gray-200" src="{{ asset('images/interogation.png') }}" alt="user photo">
                        <span class="block px-4 text-lg text-white dark:text-white">{{ app.user.username }}</span>
                    </button>
                    {% endif %}
                    <!-- Dropdown menu -->
                    <div class="z-50 hidden my-4 text-base bg-white list-none divide-y divide-gray-100 rounded-lg shadow dark:bg-gray-700 dark:divide-gray-600" id="user-dropdown">
                        <ul class="py-2" aria-labelledby="user-menu-button">
                            <li>
                                <a href="{{ path('app_logout') }}" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 dark:hover:bg-gray-600 dark:text-gray-200 dark:hover:text-white">Me déconnecter</a>
                            </li>
                        </ul>
                    </div>
                    <button data-collapse-toggle="navbar-user" type="button" class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600" aria-controls="navbar-user" aria-expanded="false">
                        <span class="sr-only">Open main menu</span>
                        <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15"/>
                        </svg>
                    </button>
                </div>
                <div class="items-center justify-between hidden w-full md:flex md:w-2/4 md:order-1" id="navbar-user">
                    {% if app.user is defined and app.user is not null %}
                    <ul class="flex flex-col font-medium p-4 md:p-0 mt-4 border border-gray-100 rounded-lg md:space-x-8 rtl:space-x-reverse md:flex-row md:mt-0 md:border-0 dark:border-gray-700">
                        <li>
                            <a href="{{ path('app_homepage') }}" class="block py-2 px-3 text-white text-2xl rounded hover:opacity-80 md:bg-transparent md:p-0 md:dark:text-white {{ route == "app_homepage" ? "active" : "" }}" aria-current="page">Accueil</a>
                        </li>
                        <li>
                            <a href="{{ path('app_question') }}" class="block py-2 px-3 text-white text-2xl hover:opacity-80 md:hover:bg-transparent md:p-0 dark:text-white md:dark:hover:text-blue-500 dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent dark:border-gray-700 {{ route == "app_question" ? "active" : "" }}">Les questions</a>
                        </li>
                        <li>
                            <a href="{{ path('app_author') }}" class="block py-2 px-3 text-white text-2xl rounded hover:opacity-80 md:hover:bg-transparent md:p-0 dark:text-white md:dark:hover:text-blue-500 dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent dark:border-gray-700 {{ route == "app_author" ? "active" : "" }}">Les auteurs</a>
                        </li>
                        <li>
                            <a href="{{ path('app_new_question') }}" class="block py-2 px-3 text-white text-2xl rounded hover:opacity-80 md:hover:bg-transparent md:p-0 dark:text-white md:dark:hover:text-blue-500 dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent dark:border-gray-700 {{ route == "app_new_question" ? "active" : "" }}">Nouvelle Question</a>
                        </li>
                    </ul>
                    {% else %}
                        <ul class="flex font-medium p-4 md:p-0 mt-4 border border-gray-100 rounded-lg md:space-x-8 rtl:space-x-reverse md:flex-row md:mt-0 md:border-0 dark:border-gray-700">
                            <li>
                                <a href="{{ path('app_login') }}" class="block py-2 px-3 text-white text-2xl hover:underline rounded md:bg-transparent md:p-0 md:dark:text-white {{ route == "app_login" ? "active" : "" }}" aria-current="page">Se connecter</a>
                            </li>
                            <li>
                                <a href="{{ path('app_register') }}" class="block py-2 px-3 text-white text-2xl hover:underline md:hover:bg-transparent md:p-0 dark:text-white md:dark:hover:text-blue-500 dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent dark:border-gray-700{{ route == "app_register" ? "active" : "" }}">S'inscrire</a>
                            </li>
                        </ul>
                    {% endif %}
                </div>
            </div>
        </nav>
    {% block body %}
    {% endblock %}
    <footer class="border-b-black flex-col mx-28 py-10">
        <div class="flex-col justify-center border-b-2 border-b-black">
            <h2 class="text-4xl text-[#AD0569] flex justify-center py-1 font-semibold">
                Livequestion
            </h2>
            <h3 class="text-2xl flex justify-center pt-2 pb-10 font-semibold">
                Echangez autour de vos thématiques préférées
            </h3>
        </div>
        <div class="w-full flex justify-between py-14">
            {% set allCategories = allCategories.getCategories %}
            {% for category in allCategories %}
                <a href="#" class="font-semibold">
                    {{ category.name }}
                </a>
            {% endfor %}
        </div>
        <div class="flex mt-28">
            <p>© 2024 </p>
            <span class="px-2">-</span>
            <p>Projet étudiant BTS / Licence</p>
            <span class="px-2">-</span>
            <a href="#">Contactez-nous</a>
        </div>
    </footer>
    </body>
</html>
